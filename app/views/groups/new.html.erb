<main>
 <nav>
    <a>
      <==
    </a>
    <h3 class="d-flex p-2">Create New Category</h3>
    <div class="d-flex text-decoration-none">
        <h4>
          <%= link_to 'sign out', destroy_user_session_path, method: :delete %>
        </h4>
    </div>

    <div class="space-top">
      <%= form_with model: @group, url: user_groups_path, method: :post, local: true, scope: :group do |f|%>
       
       <div class="field">
        <%= f.text_field :name, placeholder: "Category Name"%>
       </div>

        <div class="field">
         <%= f.text_field :icon, placeholder: "Enter Icon url"%>
       </div>

       <div class="submit-boostrap">
        <%= f.submit 'CREATE CATEGORY'%>
       </div>

      <% end %>
    </div>
 </nav>
</main>